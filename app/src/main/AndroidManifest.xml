<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ch.epfl.sdp.blindly">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <permission
        android:name="com.example.barcodelibrary.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="com.example.barcodelibrary.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providres.gsf.persmission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/blindly_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/blindly_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blindly"
        android:name=".BlindlyApplication"
        tools:ignore="ExtraText">
        <activity android:name=".profile.ProfileAudioRecording"></activity>
        <activity android:name=".profile.ProfilePassions" />
        <activity android:name=".profile.ProfileShowMe" />
        <activity android:name=".profile.ProfileOrientation" />
        <activity android:name=".profile.ProfileGenderMore" />
        <activity android:name=".profile.ProfileGender" />
        <activity android:name=".profile.ProfileBirthday" />
        <activity android:name=".profile.ProfileName" />
        <activity android:name=".profile.ProfileHouseRules" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
        <activity android:name=".settings.SettingsLocation" />

        <activity android:name=".settings.SettingsShowMe" />
        <activity android:name=".AudioLibrary" />
        <activity android:name=".EditProfile" />
        <activity android:name=".settings.Settings" />
        <activity android:name=".settings.SettingsUpdateEmail" />

        <activity
            android:name=".MainScreen"
            android:theme="@style/Theme.Blindly.NoActionBar" />
        <activity android:name=".LocationPermissionActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".recording.RecordingActivity" />
    </application>

</manifest>