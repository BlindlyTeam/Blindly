<resources>

    <style name="Widget.Theme.Blindly.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Blindly.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.Theme.Blindly.Audio.Library.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/pill_shape_button_blindly</item>
        <item name="textAllCaps">true</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

