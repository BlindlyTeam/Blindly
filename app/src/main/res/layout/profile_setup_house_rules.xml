<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_setup.ProfileHouseRules">

    <ImageView
        android:id="@+id/blindly_logo_p1"
        android:layout_width="136dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin"
        android:contentDescription="@string/blindly_app_logo"
        app:srcCompat="@drawable/blindly_dark_heart" />

    <TextView
        android:id="@+id/welcome_text_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/blindly_logo_p1"
        android:fontFamily="sans-serif"
        android:text="@string/welcome_to_blindly"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/guideline_0_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text_p1"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:layout_centerHorizontal="true"
        android:text="@string/please_follow_these_rules_while_enjoying_the_app" />

    <TextView
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/guideline_1_text"
        android:layout_marginStart="@dimen/margin"
        android:text="@string/u2713_be_yourself"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/guideline_1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/guideline_2"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:text="@string/make_sure_your_recordings_age_and_bio_are_true_to_who_you_are" />

    <TextView
        android:id="@+id/guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/guideline_2_text"
        android:layout_marginStart="@dimen/margin"
        android:text="@string/u2713_stay_safe"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/guideline_2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/guideline_3"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:text="@string/do_not_be_too_quick_to_give_out_personal_information" />

    <TextView
        android:id="@+id/guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/guideline_3_text"
        android:layout_marginStart="@dimen/margin"
        android:text="@string/u2713_play_it_cool"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/guideline_3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/guideline_4"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:text="@string/respect_others_and_treat_them_as_you_would_like_to_be_treated" />


    <TextView
        android:id="@+id/guideline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/guideline_4_text"
        android:layout_marginStart="@dimen/margin"
        android:text="@string/u2713_be_proactive"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/guideline_4_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_p1"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:text="@string/always_report_bad_behavior" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_p1"
        android:layout_width="@dimen/pill_shape_width"
        android:layout_height="@dimen/pill_shape_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin"
        android:onClick="startPermissionActivity"
        android:text="@string/i_agree"
        app:shapeAppearanceOverlay="@style/PillShapeButton" />
</RelativeLayout>