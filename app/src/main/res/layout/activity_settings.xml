<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    tools:context=".settings.Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="@string/settings_profile" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <Space
                android:id="@+id/left_margin"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_toolbar"
                android:gravity="center" />

            <TextView
                android:id="@+id/account_settings_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_toolbar"
                android:layout_toEndOf="@id/left_margin"
                android:text="@string/account_settings"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/account_settings_text"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/email_button"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_below="@+id/account_settings_text"
                android:layout_marginTop="0dp"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_below="@+id/account_settings_text"
                android:layout_toEndOf="@+id/left_margin"
                android:gravity="center"
                android:text="@string/email"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/email_address_text"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_below="@+id/account_settings_text"
                android:layout_toStartOf="@+id/email_space_2"
                android:gravity="center"
                android:textSize="15sp" />

            <Space
                android:id="@+id/email_space_2"
                android:layout_width="10dp"
                android:layout_height="49dp"
                android:layout_below="@+id/account_settings_text"
                android:layout_toStartOf="@+id/email_arrow"
                android:gravity="center" />

            <Space
                android:id="@+id/email_button_space"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_below="@+id/account_settings_text"
                android:layout_toStartOf="@+id/right_margin"
                android:gravity="center" />

            <ImageView
                android:id="@+id/email_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/email_button_space"
                android:layout_toStartOf="@+id/right_margin"
                app:srcCompat="@drawable/arrow_button" />

            <Space
                android:id="@+id/right_margin"
                android:layout_width="10dp"
                android:layout_height="49dp"
                android:layout_below="@+id/account_settings_text"
                android:layout_alignParentEnd="true"
                android:gravity="center" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/email_text"
                android:background="?android:attr/listDivider" />

            <Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/divider1" />

            <TextView
                android:id="@+id/discovery_settings_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space"
                android:layout_toEndOf="@id/left_margin"
                android:text="@string/discovery_settings"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/discovery_settings_text"
                android:background="?android:attr/listDivider" />

            <Space
                android:id="@+id/location_space_1"
                android:layout_width="10dp"
                android:layout_height="49dp"
                android:layout_below="@+id/discovery_settings_text"
                android:gravity="center" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/account_settings_text"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/location_button"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_below="@+id/discovery_settings_text"
                android:layout_marginTop="0dp"
                android:background="@color/transparent"
                android:onClick="startLocationSettings" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_below="@+id/discovery_settings_text"
                android:layout_toEndOf="@id/location_space_1"
                android:gravity="center"
                android:text="@string/location"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/current_location_text"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_below="@+id/discovery_settings_text"
                android:layout_toStartOf="@id/location_space_3"
                android:focusable="true"
                android:gravity="center"
                android:textSize="15sp" />

            <Space
                android:id="@+id/location_space_3"
                android:layout_width="10dp"
                android:layout_height="49dp"
                android:layout_below="@+id/discovery_settings_text"
                android:layout_toStartOf="@+id/location_arrow"
                android:gravity="center" />

            <Space
                android:id="@+id/location_button_space"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_below="@+id/discovery_settings_text"
                android:layout_toStartOf="@+id/right_margin"
                android:gravity="center" />

            <ImageView
                android:id="@+id/location_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/location_button_space"
                android:layout_toStartOf="@id/right_margin"
                app:srcCompat="@drawable/arrow_button" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/location_text"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/maximum_distance_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/location_text"
                android:layout_toEndOf="@id/left_margin"
                android:gravity="center"
                android:text="@string/maximum_distance"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/radius_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/location_text"
                android:layout_toStartOf="@id/distance_space_3"
                android:gravity="center"
                android:textSize="15sp" />

            <Space
                android:id="@+id/distance_space_3"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_below="@+id/location_text"
                android:layout_alignParentEnd="true"
                android:gravity="center" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/maximum_distance_text"
                android:gravity="center"
                android:max="200"
                android:progressTint="#6F44BA"
                android:scrollbarSize="4dp"
                android:thumbTint="#673AB7" />

            <Space
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_below="@+id/maximum_distance_text"
                android:layout_alignParentEnd="true"
                android:gravity="center" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/seekBar"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/show_me_button"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_below="@+id/divider4"
                android:layout_marginTop="0dp"
                android:background="@color/transparent"
                android:onClick="startShowMeSettings" />

            <TextView
                android:id="@+id/looking_for_text"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_below="@+id/divider4"
                android:layout_toEndOf="@id/left_margin"
                android:gravity="center"
                android:text="@string/looking_for"
                android:textSize="15sp" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider6"
                android:gravity="center"
                android:text="@string/logout_button_text"
                android:textSize="15sp"
                android:onClick="logout"/>

            <TextView
                android:id="@+id/show_me_text"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_below="@+id/divider4"
                android:layout_toStartOf="@id/looking_space_3"
                android:focusable="true"
                android:gravity="center"
                android:textSize="15sp" />

            <Space
                android:id="@+id/looking_space_3"
                android:layout_width="10dp"
                android:layout_height="49dp"
                android:layout_below="@+id/divider4"
                android:layout_toStartOf="@id/show_me_arrow"
                android:gravity="center" />

            <Space
                android:id="@+id/genre_button_space"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_below="@+id/seekBar"
                android:layout_toStartOf="@+id/right_margin"
                android:gravity="center" />

            <ImageView
                android:id="@+id/show_me_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/genre_button_space"
                android:layout_toStartOf="@id/right_margin"
                app:srcCompat="@drawable/arrow_button" />

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/looking_for_text"
                android:background="?android:attr/listDivider" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>