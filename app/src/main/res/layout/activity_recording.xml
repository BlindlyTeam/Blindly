<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".recording.RecordingActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recordingList"
        android:layout_width="match_parent"
        android:layout_height="460dp" />

    <View
        android:id="@+id/recordDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/recordingList"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:id="@+id/recordLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <Button
            android:id="@+id/recordingButton"
            style="@style/Widget.Theme.Blindly.Record.Button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/recordDivider"
            android:layout_centerInParent="true" />

        <Chronometer
            android:id="@+id/recordTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/recordingButton"
            android:text="TextView" />
    </RelativeLayout>

</LinearLayout>