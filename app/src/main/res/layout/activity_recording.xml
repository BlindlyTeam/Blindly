<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".recording.RecordingActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recordingList"
        android:layout_width="match_parent"
        android:layout_height="500dp" />

        <View
            android:id="@+id/recordDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/recordingList"
            android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/recordingButton"
        style="@style/Widget.Theme.Blindly.Record.Button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/recordDivider"
        android:layout_gravity="center"
        android:onClick="recordButtonClick" />

    <Chronometer
        android:id="@+id/recordTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>