<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:paddingTop="70dp"/>

        <TextView
            android:id="@+id/user_description_text"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="86dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_info_text" />

        <Button
            android:id="@+id/record_audio_profile_button"
            style="@style/Widget.Theme.Blindly.Record.Audio.Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="27dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/record_audio_profile_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/record_audio_profile"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/record_audio_profile_button"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/edit_info_profile_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            style="@style/Widget.Theme.Blindly.Edit.Info.Button"
            android:layout_toStartOf="@+id/record_audio_profile_button"
            android:layout_alignTop="@+id/record_audio_profile_button"/>

        <TextView
            android:id="@+id/edit_profile_info_text"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:text="@string/edit_profile_info"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/edit_info_profile_button"
            android:layout_below="@id/edit_info_profile_button"/>

        <Button
            android:id="@+id/settings_profile_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            style="@style/Widget.Theme.Blindly.Settings.Button"
            android:layout_toEndOf="@+id/record_audio_profile_button"
            android:layout_alignTop="@+id/record_audio_profile_button"/>

        <TextView
            android:id="@+id/settings_profile_text"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:text="@string/settings_profile"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignLeft="@id/settings_profile_button"
            android:layout_below="@+id/settings_profile_button"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>