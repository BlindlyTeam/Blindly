<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

    <ImageButton
        android:id="@+id/record_audio_profile_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="28dp"
        android:background="@color/transparent"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/record_audio_button"
        app:layout_constraintEnd_toStartOf="@+id/settings_profile_button"
        app:layout_constraintStart_toEndOf="@+id/edit_info_profile_button"
        app:layout_constraintTop_toBottomOf="@+id/user_description_text" />

    <ImageButton
        android:id="@+id/edit_info_profile_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="49dp"
        android:background="@color/transparent"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/record_audio_button"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_info_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_description_text" />

    <ImageButton
        android:id="@+id/settings_profile_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="1dp"
        android:background="@color/transparent"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/record_audio_button"
        app:layout_constraintBottom_toTopOf="@+id/settings_profile_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_description_text" />

    <Button
        android:id="@+id/audio_library_profile_button"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="83dp"
        android:background="@drawable/audio_library_button"
        android:text="@string/audio_library"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_description_text"
        android:layout_width="240dp"
        android:layout_height="71dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="86dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_info_text" />

    <TextView
        android:id="@+id/user_info_text"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="52dp"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/record_audio_profile_text"
        android:layout_width="98dp"
        android:layout_height="59dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="158dp"
        android:text="@string/record_audio_profile"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_audio_profile_button" />

    <TextView
        android:id="@+id/settings_profile_text"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="252dp"
        android:text="@string/settings_profile"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/audio_library_profile_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/record_audio_profile_button"
        app:layout_constraintTop_toBottomOf="@+id/settings_profile_button" />

    <TextView
        android:id="@+id/edit_profile_info_text"
        android:layout_width="78dp"
        android:layout_height="22dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="253dp"
        android:text="@string/edit_profile_info"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/audio_library_profile_button"
        app:layout_constraintEnd_toStartOf="@+id/record_audio_profile_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_info_profile_button" />

</androidx.constraintlayout.widget.ConstraintLayout>