<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/blindly_logo"
        android:layout_width="373dp"
        android:layout_height="130dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="19dp"
        app:srcCompat="@drawable/log_in"
        android:contentDescription="@string/blindly_app_logo"/>

    <TextView
        android:id="@+id/policy_text"
        android:layout_width="282dp"
        android:layout_height="80dp"
        android:layout_above="@+id/email_sign_in"
        android:layout_marginStart="64dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="65dp"
        android:gravity="center"
        android:text="@string/policy"
        android:textColor="@color/white"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/email_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@id/google_sign_in"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="80dp"
        android:translationZ="20dp"
        app:srcCompat="@drawable/email_logo"
        android:contentDescription="@string/fui_sign_in_with_email"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/email_sign_in"
        android:layout_width="@dimen/pill_shape_width"
        android:layout_height="@dimen/pill_shape_height"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/google_sign_in"
        android:backgroundTint="@color/white"
        app:shapeAppearanceOverlay="@style/PillShapeButton"
        android:text="@string/fui_sign_in_with_email"
        android:textColor="@color/blindly_grey"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/google_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@id/phone_number_sign_in"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="80dp"
        android:translationZ="20dp"
        app:srcCompat="@drawable/google_logo"
        android:contentDescription="@string/fui_sign_in_with_google"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/google_sign_in"
        android:layout_width="@dimen/pill_shape_width"
        android:layout_height="@dimen/pill_shape_height"
        android:layout_above="@id/phone_number_sign_in"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:text="@string/fui_sign_in_with_google"
        android:textColor="@color/blindly_grey"
        android:textSize="13sp"
        app:shapeAppearanceOverlay="@style/PillShapeButton" />

    <ImageView
        android:id="@+id/phone_logo"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_above="@id/facebook_sign_in"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="82dp"
        android:translationZ="20dp"
        app:srcCompat="@drawable/phone_logo"
        android:contentDescription="@string/fui_sign_in_with_phone_number"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/phone_number_sign_in"
        android:layout_width="@dimen/pill_shape_width"
        android:layout_height="@dimen/pill_shape_height"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/facebook_sign_in"
        android:backgroundTint="@color/white"
        app:shapeAppearanceOverlay="@style/PillShapeButton"
        android:text="@string/fui_sign_in_with_phone"
        android:textColor="@color/blindly_grey"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/facebook_logo"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:layout_marginStart="80dp"
        android:translationZ="20dp"
        app:srcCompat="@drawable/facebook_logo"
        android:contentDescription="@string/fui_sign_in_with_facebook"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/facebook_sign_in"
        android:layout_width="@dimen/pill_shape_width"
        android:layout_height="@dimen/pill_shape_height"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        app:shapeAppearanceOverlay="@style/PillShapeButton"
        android:text="@string/fui_sign_in_with_facebook"
        android:textColor="@color/blindly_grey"
        android:textSize="13sp"/>
</RelativeLayout>